{
  "manifest_version": 3,
  "name": "Weather Extension",
  "version": "1.0.0",
  "description": "amfoss task 07",
  "permissions": ["geolocation", "https://api.openweathermap.org/"],
  "Content_Security_Policy": "script-src 'self' 'unsafe-eval' https://*.fontawesome.com; object-src 'self'",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",  
    "default_icon": {
      "16": "assets/16px.png",
      "48": "assets/48px.png",
      "128": "assets/128px.png"
    }
  }
}
